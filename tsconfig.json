{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    /* added for typeorm */
    "experimentalDecorators": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
